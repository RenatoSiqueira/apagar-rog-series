<%- include ('../partials/header.ejs') %>

   
    <section id="about">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <form method="post">
            <h2>Nova Série</h2>
            <div class="form-group">
              <label for="name">Nome da Série</label>
              <input name="name" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="nameHelp" placeholder="Informe Nome">
               <small id="nameHelp" class="form-text text-muted">Nome da Série a ser salva</small>
            <% if(errors && errors.indexOf('name')>=0) { %>
              <small id="nameHelp" class="form-text text-muted">POR FAVOR, INFORME O NOME DA SÉRIE!!!</small>
            <% } %>
              </div> 
            <div class="form-group">
                <label for="status">Situação:</label>
              <select class="form-control" id="status" name="status">
                <option value="assistir">Para Assistir</option>
                <option value="assistindo">Assistindo</option>
                <option value="assistido">Assistido</option>
              </select>
            </div>

            <button class="btn btn-primary">Salvar</button>
          </form>
          </div>
        </div>
      </div>
    </section>

    <%- include ('../partials/footer.ejs') %>
